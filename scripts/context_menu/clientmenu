#!/bin/bash

test -z "$IPCCMD" && IPCCMD=duskc

bind_clientmenu() {
	WINID=$($IPCCMD get_monitors | jq '.[] | select(.is_selected == true) | .clients.selected')
	JSON=$($IPCCMD get_client $WINID)
	NAME=$(echo "$JSON" | jq '.name' | sed 's/"//g')

	echo "$JSON" | jq '.flags' | awk -F":" -vNAME="$NAME" '
		BEGIN {
			print "#INDENT#" NAME
			print "#INDENT#"
			print "#INDENT#ðŸ—¶ Close\t#IPCCMD# run_command killclient"
			print "#INDENT#ðŸ•‚ Move\t#IPCCMD# run_command movemouse"
			print "#INDENT#â‡² Resize\t#IPCCMD# run_command resizemouse"
			print "#INDENT#ðŸ•€ Place\t#IPCCMD# run_command placemouse"
			print "#INDENT#"
			print "#INDENT#ðŸ—— Toggle Floating\t#IPCCMD# run_command togglefloating"
			print "#INDENT#ðŸ—— Toggle Sticky\t#IPCCMD# run_command togglesticky"
			print "#INDENT#â›¶ Fullscreen\t#IPCCMD# run_command togglefullscreen"
			print "#INDENT#"
			print "#INDENT#Flags"
		}

		NF == 1 {
			next
		}

		{
			gsub(/^  |"|,/, "");
			print "#INDENT#\t" $1 ": " $2 "\t#IPCCMD# run_command toggleclientflag " $1
		}
	' | sed -e "s/#INDENT#/$1/" -e "s/#IPCCMD#/${IPCCMD}/"
}

# Allow the above menu to be sourced by other scripts by setting
# the SOURCE_MENU environment variable.
if [ -z "$SOURCE_MENU" ]; then
	eval "$(bind_clientmenu '' | xmenu)"
fi
